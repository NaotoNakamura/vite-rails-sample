<h2>All Posts</h2>
<% @posts.each do |post| %>
  <div>
    <%= post.user.name %>
    <%= post.body %>
    <%= post.created_at %>
  </div>
<% end %>

<% if user_signed_in? %>
  <h2>Add Post</h2>
  <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <%= form_with model: @post do |f| %>
    <%= f.text_area :body %>
    <%= f.submit "Save" %>
  <% end %>
<% end %>
